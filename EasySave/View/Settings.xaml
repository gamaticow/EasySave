<UserControl x:Class="EasySave.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.View"
        mc:Ignorable="d">
    <StackPanel Height="450" Width="800">
        <StackPanel Orientation="Horizontal">
            <Label Height="25" Content="{Binding TLanguageChoice}" />
            <ComboBox Height="26" Width="120" ItemsSource="{Binding Languages}" SelectedItem="{Binding SLanguage}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Height="25" Content="{Binding TLanguageChoice}" />
            <ListView Height ="100" Width="100" />
        </StackPanel>
    </StackPanel>
</UserControl>
