<UserControl x:Class="EasySave.View.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.View"
        mc:Ignorable="d">
    <Grid>
        <Label Content="Menu" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Name}" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top"/>
        <Button Content="Language" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Height="20" Command="{Binding UpdateViewCommand}" CommandParameter="Language"/>
    </Grid>
</UserControl>
